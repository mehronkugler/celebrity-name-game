<header>
  <nav>
    <div class="nav-wrapper">
      <a href="#" class="brand-logo center">Celebrity Name Game</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li>Score this round: <span class="currentscore">0</span> | Total score: <%= @score %> | Round # <%= @rounds %></li>
      </ul>
    </div>
  </nav>
</header>

<a name="top"></a>
<section class="header">  

<h6>Search movies and see if you know who's who.</h6>
<p></p>

</section>

<section class="searchbox">
  <%= form_tag '/', method: :get, 
  remote: :true, 
  id: "searchbox" %>
    <%= text_field_tag :searchtext, 'Interstellar' %>
    <%= hidden_field_tag 'totalscore', (params[:totalscore]) %>
    <%= hidden_field_tag 'totalrounds', (params[:totalrounds]) %>
    <%= submit_tag 'Find movie', class: 'waves-effect waves-light btn' %> <div class="loader"></div>
</section>

<!-- Add loading icon - should move this code to a js file -->
<script type="text/javascript">
     $( "form" ).submit(function( ) {
      $('.loader').addClass('loading')
    });
</script>

